<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_img">
            <div class="card-body">
                <p class="card-text mt-3">
                    <i>
                        Owned by: <%= listing.owner.username %>
                    </i><br>
                    <%= listing.description %> <br>
                        &#8377 <%= listing.price.toLocaleString("en-IN") %> / night <br>
                            <%= listing.location %>, <%= listing.country %>
                </p>
            </div>
        </div>
        <% if(currUser && currUser._id.equals((listing.owner._id))) { %>
            <div class="btns col-6 offset-3">
                <form action="/listings/<%= listing._id %>/edit">
                    <button class="btn btn-dark edit-btn">Edit</button>
                </form><br>
                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark  offset-5">Delete</button>
                </form>
            </div>
            <% } %>
                <div class="col-8 offset-3 mb-3">
                    <% if(currUser){ %>
                        <h4>Leave a review</h4>
                        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate
                            class="needs-validation">
                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input type="range" name="review[rating]" id="rating" class="form-range" min="1"
                                    max="5">
                            </div>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comment</label>
                                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                                <div class="invalid-feedback">
                                    Please enter a comment
                                </div>
                            </div>
                            <button class="btn btn-outline-dark">Submit</button>
                        </form>
                        <% } %>
                            <hr>

                            <div class="mt-3">
                                <p><b>All Reviews</b></p>
                                <div class="row">
                                    <% for(review of listing.reviews) { %>
                                        <div class="card col-5 ms-3 mb-3 p-4">
                                            <div class="card-body">
                                                <div class="card-title">
                                                    <strong> @<%= review.author.username %></strong>
                                                </div>
                                                <p class="card-text">
                                                    <%= review.comment %>
                                                </p>
                                                <p class="card-text">
                                                    <strong>
                                                        <%= review.rating %> STAR
                                                    </strong>
                                                </p>
                                            </div>
                                            <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                                <form method="post"
                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    class="mt-3 mb-3">
                                                    <button class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                                <% } %>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                </div>